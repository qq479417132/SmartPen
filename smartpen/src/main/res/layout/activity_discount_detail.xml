<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20dp"
        android:orientation="vertical">

        <!--Title-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4A90E2"
            android:id="@+id/llDiscountTitle"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="活动详情"
                android:textColor="@android:color/white"
                android:textSize="24sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!---->



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="0.3"
                    android:orientation="vertical">



                    <android.support.v4.view.ViewPager
                    android:id="@+id/vpView"
                    android:layout_width="match_parent"
                    android:layout_height="410dp"
                    android:layout_gravity="center" />

                    <ImageView
                        android:layout_marginTop="20dp"
                        android:background="#010101"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />


                    <com.cleverm.smartpen.ui.banner.NoTouchBGABanner
                        android:id="@+id/BGADetailImage"
                        style="@style/BannerDefaultStyle"
                        app:banner_pointTopBottomMargin="20dp"
                        android:visibility="gone"
                        android:layout_height="410dp"
                        android:clickable="false"
                        android:layout_width="match_parent"
                        app:banner_transitionEffect="defaultEffect" />


                    <TextView
                        android:id="@+id/tvDiscountDetailTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="活动规则"
                        android:textColor="#000000"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/tvDiscountDetailTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="#000000"
                        android:text="活动时间：2016年2月8日"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tvDiscountDetailDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:textColor="#000000"
                        android:text="活动说明：具体安装餐餐厅体定制定活动细则具体"
                        android:textSize="20sp" />


                </LinearLayout>




            <!---->


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:layout_weight="0.7"
                >

                <ImageView
                    android:background="@mipmap/icon_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <com.cleverm.smartpen.ui.ListViewForScrollView
                android:id="@+id/lvAdList"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"

                />

                <ImageView
                    android:background="@mipmap/icon_01"
                    android:layout_gravity="bottom|right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </FrameLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="30dp"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:layout_weight="0.7"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/ivDiscountDetailImage1"
                    android:layout_width="330dp"
                    android:layout_height="180dp"
                    android:src="@mipmap/test_image1"
                    android:visibility="invisible"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/ivDiscountDetailImage2"
                    android:layout_width="330dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="20dp"
                    android:visibility="invisible"
                    android:src="@mipmap/test_image2"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/ivDiscountDetailImage3"
                    android:layout_width="330dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/test_image3"
                    android:visibility="invisible"
                    android:scaleType="centerCrop" />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</ScrollView>