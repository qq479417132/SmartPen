<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/e_drive">

    <LinearLayout
        android:layout_width="@dimen/e_drive_width"
        android:layout_height="@dimen/e_drive_heigh"
        android:layout_centerInParent="true"
        android:alpha="0.8"
        android:background="@android:color/white"
        android:orientation="vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:paddingTop="35dp"
            android:src="@mipmap/e_driver_icon1" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/e_driver_text2"
            android:textColor="@android:color/black"
            android:textSize="40dp" />

        <ImageView
            android:layout_width="@dimen/e_drive_icon2_width"
            android:layout_height="@dimen/e_drive_icon2_heigh"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp"
            android:id="@+id/drive_code"/>

    </LinearLayout>

    <!-- 关闭按钮-->
    <ImageView
        android:id="@+id/e_driver_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:src="@drawable/select_close" />
</RelativeLayout>